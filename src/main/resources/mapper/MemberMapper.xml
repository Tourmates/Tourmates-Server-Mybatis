<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.travelmates.member.model.repository.MemberMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into member(login_id, login_pw, username, email, phone, birth, gender, nickname)
        values (#{loginId}, #{loginPw}, #{username}, #{email}, #{phone}, #{birth}, #{gender}, #{nickname})
    </insert>

    <select id="findById" resultType="Member">
        select *
        from member
        where member_id = #{id}
    </select>

    <select id="findAll" resultType="Member">
        select *
        from member
    </select>

    <select id="findByLoginId" resultType="Member">
        select *
        from member
        where login_id = #{loginId};
    </select>

    <select id="findByPhone" resultType="Member">
        select *
        from member
        where phone = #{phone};
    </select>

    <select id="findByNickname" resultType="Member">
        select *
        from member
        where nickname = #{nickname};
    </select>

    <select id="findByEmail" resultType="Member">
        select *
        from member
        where email = #{email};
    </select>

    <update id="update">
        update member
        set login_pw=#{loginPW},
            email=#{email},
            phone=#{phone},
            nickname=#{nickname},
            nickname_last_modified_date=#{nicknameLastModifiedDate},
            last_modified_date=#{lastModifiedDate}
        where member_id = #{id}
    </update>
</mapper>